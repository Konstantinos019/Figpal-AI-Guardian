{
  "manifest_version": 3,
  "name": "DS Guardian",
  "version": "1.1",
  "description": "A friendly DS Guardian that follows your cursor on Figma.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.figma.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.x.ai/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*",
    "https://slack.com/*",
    "https://hooks.slack.com/*",
    "https://piranesi.skroutz.io/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.figma.com/*"
      ],
      "js": [
        "modules/core/event-bus.js",
        "modules/core/logger.js",
        "modules/character/sprite.js",
        "modules/ui/panel.js",
        "modules/chat/renderer.js",
        "modules/ai/tracker.js",
        "modules/ai/client.js",
        "modules/ai/system-prompt.js",
        "modules/figma/data.js",
        "modules/figma/plugin-bridge.js",
        "modules/core/utils.js",
        "modules/onboarding/setup.js",
        "modules/ui/components/Button.js",
        "modules/chat/commands.js",
        "modules/chat/autocomplete.js",
        "modules/chat/ui.js",
        "modules/chat/flow.js",
        "modules/character/physics.js",
        "modules/character/interactions.js",
        "modules/figma/automation.js",
        "modules/core/vfs.js",
        "modules/core/workflow-engine.js",
        "modules/core/skill-engine.js",
        "modules/core/diff-engine.js",
        "modules/core/monitor.js",
        "modules/features/web-search.js",
        "modules/features/web-search.js",
        "modules/core/injector.js",
        "content.js"
      ],
      "css": [
        "styles.css",
        "modules/ui/components/Button.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*.svg",
        "assets/pals/**/*.svg",
        "assets/stage/*.svg",
        "assets/Icons/*.svg",
        "assets/Accessories/**/*.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}