{
  "manifest_version": 3,
  "name": "DS Guardian",
  "version": "1.1",
  "description": "A friendly DS Guardian that follows your cursor on Figma.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "*://*.figma.com/*",
    "https://generativelanguage.googleapis.com/*",
    "https://api.x.ai/*",
    "https://api.openai.com/*",
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.figma.com/*"
      ],
      "js": [
        "modules/core/event-bus.js",
        "modules/chat/renderer.js",
        "modules/ai/client.js",
        "modules/ai/system-prompt.js",
        "modules/figma/data.js",
        "modules/figma/plugin-bridge.js",
        "modules/onboarding/setup.js",
        "modules/chat/commands.js",
        "modules/chat/flow.js",
        "modules/character/physics.js",
        "modules/character/interactions.js",
        "modules/figma/automation.js",
        "modules/core/injector.js",
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/selection.svg",
        "assets/thinking.svg",
        "assets/home.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}