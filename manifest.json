{
  "manifest_version": 3,
  "name": "FigPal Cursor Follower",
  "version": "1.0",
  "description": "A friendly FigPal that follows your cursor on Figma.",
  "permissions": ["activeTab"],
  "host_permissions": ["*://*.figma.com/*", "http://localhost:3000/*"],
  "content_scripts": [
    {
      "matches": ["*://*.figma.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/selection.svg"],
      "matches": ["*://*.figma.com/*"]
    }
  ]
}
